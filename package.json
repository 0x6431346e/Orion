{
  "name": "lumpy",
  "version": "0.1.1",
  "description": "Lumpy is an easy-to-use and KISS IPFS desktop interface",
  "main": "app/index.js",
  "scripts": {
    "test": "jest",
    "start": "electron-forge start",
    "build-icons": "icon-gen -i ./docs/logo.svg -o ./out/ -m ico,icns,png; cp ./out/app.icns ./docs/ ; cp ./out/app.ico ./docs/",
    "package": "yarn build-icons; electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/siderus/Lumpy",
  "keywords": [
    "electron",
    "ipfs",
    "file",
    "p2p",
    "upload"
  ],
  "author": "Lorenzo Setale",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.3",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^3.14.0",
    "eslint-config-equimper": "^1.3.5",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "icon-gen": "^1.0.7",
    "jest": "^22.4.2",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "byte-size": "^3.0.0",
    "classnames": "^2.2.5",
    "electron-compile": "^6.4.2",
    "electron-settings": "^2.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "ipfs-api": "git+https://github.com/ipfs/js-ipfs-api.git",
    "is-electron-renderer": "^2.0.1",
    "is-ipfs": "^0.3.0",
    "mobx": "^3.0.2",
    "mobx-react": "^4.1.0",
    "multiaddr": "^3.0.2",
    "nedb": "^1.8.0",
    "photon": "git+https://github.com/connors/photon.git",
    "promised-exec": "^1.0.1",
    "q-sqlite3": "^0.1.3",
    "query-string": "^5.1.0",
    "react": "^15.4.2",
    "react-desktop": "^0.2.17",
    "react-dom": "^15.4.2",
    "react-photonkit": "git+https://github.com/react-photonkit/react-photonkit.git",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "styled-components": "^3.1.6",
    "underscore": "^1.8.3"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "docs/logo.png"
      },
      "electronWinstallerConfig": {
        "name": "lumpy"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "lumpy"
      }
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "out"
    ]
  }
}
