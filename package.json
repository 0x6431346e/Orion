{
  "name": "Orion",
  "version": "0.2.0",
  "description": "Orion is an easy-to-use and KISS IPFS desktop interface",
  "main": "app/entry.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint app/ --ext .jsx --ext .js",
    "start": "electron .",
    "build-icons": "icon-gen -i ./docs/logo.svg -o ./docs/ -m ico,icns -n ico=logo,icns=logo; cp ./docs/logo.icns ./out/ ; cp ./docs/logo.ico ./out/",
    "prepackage": "mkdir out; yarn build-icons; NODE_ENV=production electron-compile app",
    "package": "yarn prepackage && build --dir",
    "make": "yarn prepackage && build -mwl --publish always"
  },
  "repository": "https://github.com/siderus/Orion",
  "keywords": [
    "electron",
    "ipfs",
    "file",
    "p2p",
    "upload"
  ],
  "author": {
    "name": "Lorenzo Setale",
    "email": "lorenzo.setale@siderus.io"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "electron-builder": "^20.8.1",
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.3",
    "electron-react-devtools": "^0.5.3",
    "eslint": "^4.19.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "icon-gen": "^1.0.7",
    "jest": "^22.4.2"
  },
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "byte-size": "^3.0.0",
    "classnames": "^2.2.5",
    "electron-compile": "^6.4.2",
    "electron-settings": "^2.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^2.21.4",
    "ipfs-api": "git+https://github.com/ipfs/js-ipfs-api.git",
    "is-electron-renderer": "^2.0.1",
    "is-ipfs": "^0.3.0",
    "mobx": "^3.0.2",
    "mobx-react": "^4.1.0",
    "multiaddr": "^3.0.2",
    "nedb": "^1.8.0",
    "photon": "git+https://github.com/connors/photon.git",
    "promised-exec": "^1.0.1",
    "query-string": "^5.1.0",
    "react": "^15.4.2",
    "react-desktop": "^0.2.17",
    "react-dom": "^15.4.2",
    "react-photonkit": "git+https://github.com/react-photonkit/react-photonkit.git",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "styled-components": "^3.1.6",
    "underscore": "^1.8.3"
  },
  "build": {
    "appId": "io.siderus.orion",
    "files": [
      "app/**/*",
      "docs/**",
      ".cache/**/*"
    ],
    "directories": {
      "output": "out"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ]
    },
    "mac": {
      "icon": "out/logo.icns",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "out/logo.ico"
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "out"
    ]
  }
}
